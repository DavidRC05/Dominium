@model List<DominiumLocal.Entity.visitaEntity>
@{
    Layout = "~/Views/Shared/_Layout_Dashboard.cshtml";
    ViewBag.Title = "AdministrarVisitas";
}

<style>
    thead {
        background-color: #343957;
        color: #fff;
    }

    td {
        color: black
    }
</style>


<div class="page-heading header-text">
    <div class="container mt-4">
        <h2 class="mb-4">Administrar Visitas</h2>

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="text-center" scope="col">ID</th>
                        <th class="text-center" scope="col">Nombre Visitante</th>
                        <th class="text-center" scope="col">Propiedad</th>
                        <th class="text-center" scope="col">Fecha</th>
                        <th class="text-center" scope="col">Estado</th>
                        <th class="text-center" scope="col">Actualizar</th>
                        <th class="text-center" scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th class="text-center">@item.Id</th>
                            <td class="text-center">@item.NombreVisitante</td>
                            <td class="text-center">@item.PropiedadVisitada</td>
                            <td class="text-center">@item.FechaVisita</td>
                            <td class="text-center">@item.EstadoVisita</td>

                            <td style="text-align:center">
                                <a href="@Url.Action("ActualizarVisita", "Admin", new { q = item.Id })"><i class="fa fa-refresh fa-lg bg-black"></i></a>
                            </td>

                            <td style="text-align:center">
                                <a href="@Url.Action("EliminarVisita", "Admin", new { q = item.Id })" class="eliminar-propiedad" data-propiedad-id="@item.Id">
                                    <i class="fa fa-trash fa-lg bg-black"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="d-lg-flex justify-content-center mt-5">
                <h3 class="mt-5 text-black">Aun no has agendado visitas...</h3>
            </div>
        }

    </div>
</div>

